@page "/"
@inject PianoteqClient Client
@inject ISnackbar Snackbar

<PageTitle>Pianoteq</PageTitle>

<style>
    body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
    
    .full-height {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>

<div class="full-height">
    
    @* Top Row: Previous | Preset Name | Next *@
    <MudPaper Elevation="4" Square="true" Style="padding: 24px;">
        <MudGrid Justify="Justify.Center">
            <MudItem xs="2" Style="text-align: center;">
                <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" 
                               Color="Color.Primary" 
                               Size="Size.Large"
                               Variant="Variant.Filled"
                               OnClick="PreviousPreset"
                               Disabled="@_loading" />
            </MudItem>
            
            <MudItem xs="8" Style="text-align: center;">
                <MudText Typo="Typo.h4" Align="Align.Center">
                    @if (_loading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                    }
                    else
                    {
                        @_currentPresetName
                    }
                </MudText>
            </MudItem>
            
            <MudItem xs="2" Style="text-align: center;">
                <MudIconButton Icon="@Icons.Material.Filled.ArrowForward" 
                               Color="Color.Primary" 
                               Size="Size.Large"
                               Variant="Variant.Filled"
                               OnClick="NextPreset"
                               Disabled="@_loading" />
            </MudItem>
        </MudGrid>
    </MudPaper>

    @* Spacer *@
    <div style="flex: 1;"></div>

    @* Bottom: Condition Slider *@
    <MudPaper Elevation="4" Square="true" Style="padding: 32px;">
        <MudStack Spacing="3">
            <MudGrid Justify="Justify.SpaceBetween">
                <MudItem>
                    <MudText Typo="Typo.h5">Condition</MudText>
                </MudItem>
                <MudItem>
                    <MudChip T="string" Color="@GetConditionColor()" Size="Size.Large">
                        @GetConditionLabel()
                    </MudChip>
                </MudItem>
            </MudGrid>
            
            <MudSlider T="double"
                       Value="_condition" 
                       ValueChanged="@((double val) => OnConditionChanged(val))"
                       Min="0.0" 
                       Max="1.0" 
                       Step="0.01"
                       Color="Color.Primary"
                       Size="Size.Large"
                       Disabled="@_loading" />
            
            <MudGrid>
                <MudItem xs="4">
                    <MudText Typo="Typo.caption" Align="Align.Left">New</MudText>
                </MudItem>
                <MudItem xs="4">
                    <MudText Typo="Typo.caption" Align="Align.Center">Used</MudText>
                </MudItem>
                <MudItem xs="4">
                    <MudText Typo="Typo.caption" Align="Align.Right">Worn</MudText>
                </MudItem>
            </MudGrid>
        </MudStack>
    </MudPaper>

</div>

@code {
    private string? _currentPresetName;
    private double _condition = 0.5;
    private bool _loading = true;
    private System.Threading.Timer? _debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentState();
    }

    private async Task LoadCurrentState()
    {
        _loading = true;
        StateHasChanged();
        
        try
        {
            var info = await Client.GetInfoAsync();
            _currentPresetName = info.CurrentPreset?.Name ?? "Unknown";

            // Get the actual condition value from the current preset
            var parameters = await Client.GetParametersAsync();
            
            // Debug: Find all condition-related parameters
            var conditionParams = parameters.Where(p => 
                p.Id.Contains("Condition", StringComparison.OrdinalIgnoreCase) ||
                p.Name.Contains("Condition", StringComparison.OrdinalIgnoreCase)
            ).ToList();
            
            if (conditionParams.Any())
            {
                // Use the first condition parameter found
                var conditionParam = conditionParams.First();
                _condition = conditionParam.NormalizedValue;
                
                // Debug log
                Console.WriteLine($"Found condition parameter: ID='{conditionParam.Id}', Name='{conditionParam.Name}', Value={conditionParam.NormalizedValue}");
            }
            else
            {
                // Fallback: try exact match
                var conditionParam = parameters.FirstOrDefault(p => p.Id == "Condition");
                if (conditionParam != null)
                {
                    _condition = conditionParam.NormalizedValue;
                }
                else
                {
                    // Default if not found
                    _condition = 0.5;
                    Console.WriteLine($"Condition parameter not found. Available params: {string.Join(", ", parameters.Take(10).Select(p => p.Id))}");
                }
            }
        }
        catch (Exception ex)
        {
            _currentPresetName = "Connection Error";
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task PreviousPreset()
    {
        _loading = true;
        try
        {
            await Client.PrevPresetAsync();
            await LoadCurrentState();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            _loading = false;
        }
    }

    private async Task NextPreset()
    {
        _loading = true;
        try
        {
            await Client.NextPresetAsync();
            await LoadCurrentState();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            _loading = false;
        }
    }

    private void OnConditionChanged(double value)
    {
        _condition = value;
        StateHasChanged();
        
        // Debounce the API call
        _debounceTimer?.Dispose();
        _debounceTimer = new System.Threading.Timer(async _ =>
        {
            try
            {
                // Get current parameters to find the correct condition parameter ID
                var parameters = await Client.GetParametersAsync();
                var conditionParam = parameters.FirstOrDefault(p => 
                    p.Id.Contains("Condition", StringComparison.OrdinalIgnoreCase) ||
                    p.Name.Contains("Condition", StringComparison.OrdinalIgnoreCase));
                
                if (conditionParam != null)
                {
                    // Update using the correct parameter structure
                    var updatedParam = new ParameterInfo
                    {
                        Id = conditionParam.Id,
                        NormalizedValue = _condition
                    };
                    
                    await Client.SetParametersAsync(new List<ParameterInfo> { updatedParam });
                    Console.WriteLine($"Updated {conditionParam.Id} to {_condition}");
                }
                else
                {
                    throw new Exception("Condition parameter not found");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error updating condition: {ex.Message}");
                await InvokeAsync(() =>
                {
                    Snackbar.Add($"Failed to update: {ex.Message}", Severity.Warning);
                });
            }
        }, null, 300, Timeout.Infinite);
    }

    private string GetConditionLabel()
    {
        if (_condition < 0.3) return "New Piano";
        if (_condition < 0.7) return "Used Piano";
        return "Worn Piano";
    }

    private Color GetConditionColor()
    {
        if (_condition < 0.3) return Color.Success;
        if (_condition < 0.7) return Color.Warning;
        return Color.Error;
    }

    public void Dispose()
    {
        _debounceTimer?.Dispose();
    }
}
